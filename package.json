{
  "name": "smc-defi-ecosystem",
  "version": "1.0.0",
  "description": "Complete DeFi ecosystem with USDT/USDC tokens, AMM, and Staking Rewards",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "flatten": "truffle-flattener contracts/AMM.sol > flattened/EnhancedAMM.sol",
    "test:complete": "hardhat test test/CompleteDeFi.test.ts",
    "commit": "node scripts/version/parallel-commit.js",
    "commit:dry": "node scripts/version/parallel-commit.js --dry-run",
    "commit:sh": "bash scripts/version/parallel-commit.sh",
    "commit:sh:dry": "bash scripts/version/parallel-commit.sh --dry-run",
    "commit:all": "git add -A && git commit -m \"chore: update all changes\"",
    "commit:auto": "bash scripts/version/parallel-commit.sh --max 3",
    "status": "git status",
    "changes": "git status --porcelain",
    "staged": "git diff --cached --name-only"
  },
  "keywords": [
    "defi",
    "ethereum",
    "hardhat",
    "solidity",
    "amm",
    "staking",
    "usdt",
    "usdc"
  ],
  "author": "Hyperkit Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.0",
    "chai": "^4.3.7",
    "ethers": "^6.7.1",
    "hardhat": "^2.17.1",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "dotenv": "^16.3.1",
    "truffle-flattener": "^1.6.0"
  }
}
